@model DoAnCoSo.Models.OrderViewModel
@using (Ajax.BeginForm("CheckOut", "ShoppingCart", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "load_data",
    OnComplete = "OnSuccessCO",
    OnFailure = "Onfailure"
}, new { @id = "myForm" }))
{
    @Html.AntiForgeryToken()
    <h3>Thông tin khách hàng </h3>
    <div class="form-group">
        <label>Họ và tên</label>
        <input type="text" name="customername" required class="form-control" autocomplete="off"/>
    </div>
    <div class="form-group">
        <label>Số điện thoại</label>
        <input type="text" name="phone" class="form-control" autocomplete="off"/>
    </div>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <p><label>Thời gian</label></p>
     @*<input type="text" name="datetime" id="datetimepicker" placeholder=" Chọn ngày giờ">*@
    <input hidden type="text" name="datetime" id="datetimepicker" data-datetime="@Session["TimeTable"]" />
    <label type="text" name="datetime" class="form-control" >@Session["TimeTable"]</label>


    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" class="form-control" autocomplete="off" />
    </div>
    @* <div class="form-group">
            <label>Hình thức thanh toán</label>
            <select class="form-control" name="typepayment">
                <option value="1" selected>COD</option>
                <option value="2">Chuyển khoản</option>
            </select>
        </div>*@
    <div class="form-group">
        <p><label>Ghi chú</label></p>
        <textarea name="address" rows="4" cols="106" placeholder="Số lượng khách, địa chỉ ..."></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-success">Đặt bàn</button>
    </div>
}
